<script src="/js/group/new_group.js"></script>
<script src="https://unpkg.com/xlsx/dist/xlsx.full.min.js"></script>
<link rel="stylesheet" href="/styles/group/master.css" />
<link rel="stylesheet" href="/styles/group/main.css" />

<div class="colorbar">
  <div class="contwrapper">
    <p class="pagetitle">Group Management</p>
    <small style="font-family: Poppins;">Create new group in this webpage.</small>
  </div>

  <div class="btns-wrapper">
    <button onclick="window.location.href = '/group';" class="btn btn-primary">Manage Group</button>
  </div>
</div>

<div class="content_placeholder" style="flex-grow: 1;">
  <form action="" method="POST" style="width: 500px; margin: 20px 0px; align-self: center; background-color: white; padding: 50px; border-radius: 2%; border: 1px solid #cccc; font-family: Roboto; font-size: 0.9em;">
    <div class="form-group">
      <label for="group_index">Group Index</label>
      <input type="text" style="font-size: 0.9em;" class="form-control" id="group_index" name="group_index" placeholder="Enter group index (e.g. SSP1)" required aria-required="true" />
    </div>
    <div class="form-group">
      <label for="group_size">Group Size</label>
      <input type="number" style="font-size: 0.9em;" class="form-control" id="group_size" name="group_size" placeholder="Enter the size of the group" min="1" required aria-required="true" />
    </div>
    <button type="button" onclick="add_new_group(this.parentNode);" class="btn btn-primary">Create Group</button>
    <button type="submit" class="submit_btn" hidden></button>
  </form>
  <img src="/images/homepage_image_8.jpg" height="500" style="align-self: center; margin: 20px 0px;" />
</div>
